{
  "scripts": {
    "start": "bun build && bun start"
  },
  "bun": {
    "plugins": [
      ["@bun/plugin-esbuild", {
        "use": ["@bun/bundler"],
        "input": ["src/main.ts"],
      }]
    ],
    "target": [
      "node14"
    ],
    "server": {
      "files": ["src/main.ts"]
    }
  }
}
